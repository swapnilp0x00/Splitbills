<div class="">
  <h1>Welcome <%=current_user.name%> to split App</h1>
  <h1>User id : <%=current_user.id%></h1>
</div>


  <div class="container">
    <%if !@amount.nil?%>
      <%if @amount > 0%>
        <h1>You have total lent : <%=@amount%> Rs</h1>
      <%elsif @amount < 0%>
        <h1>You have total borrowed : <%=@amount.abs%> Rs</h1>
      <%else%>
        <h1>You don't borrow or lent anything</h1>
      <%end%>
    <%end%>
  </div>

  <div class="container">
    <p>positive value means you have lent money</p>
    <p>negative value means you have borrowed money</p>
    
    <p><strong>hash for each bill</strong></p>
    <%=@billwise_hash%>
    <p><strong>total hash</strong></p>
    <%=@total_hash%>
  </div>

<br/>
<%=create_new_bill_button%>
<%=create_show_bills_button%>
